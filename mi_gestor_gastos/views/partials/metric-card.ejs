<div class="metric-card">
    <div class="metric-icon" style="background-color: <%= color %>;">
        <i class="<%= icon %>"></i>
    </div>
    <div class="metric-content">
        <h3><%= title %></h3>
        <p class="metric-value"><%= value %></p>
        <% if (trend) { %>
        <p class="metric-trend <%= trend %>">
            <i class="fas fa-arrow-<%= trend === 'up' ? 'up' : 'down' %>"></i>
            <%= change %>
        </p>
        <% } %>
    </div>
</div>